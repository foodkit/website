<main id="main" class="content-about">
  <div class="section-page-header position-relative">
    <div class="section-wrapper position-relative">
      <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="holder d-flex align-items-center justify-content-center">
            <header class="section-title text-center text-light">
              <h2 class="title">Empowering restaurants globally</h2>
              <div class="subtitle">
                <p>Building the next generation of Foodtech</p>
              </div>
            </header>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
  <%= partial "partials/about_us_links", :locals => {:selected => 'about'} %>
  <div class="section-preview position-relative d-flex">
    <div class="bg-stretch position-absolute h-100 w-100">
      <span data-srcset="images/preview-box-bg-large.jpg, images/preview-box-bg-large-2x.jpg 2x"></span>
    </div>
    <div class="container d-flex">
      <div class="row">
        <div class="col-12 col-md-7 col-lg-6 d-flex align-items-center">
